{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "osx": {
                "command": "clang++",
                "args": [
                    "-g",
                    "${file}",
                    "-pipe",
                    "-o",
                    "${fileDirname}${pathSeparator}${fileBasenameNoExtension}.out"
                ]
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "${file}",
                    "-pipe",
                    "-o",
                    "${fileDirname}${pathSeparator}${fileBasenameNoExtension}.exe"
                ]
            },
            "label": "C++ build Single file",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "C++ build Project",
            "osx": {
                "command": "clang++",
                "args": [
                    "-g",
                    "*.cpp",
                    "*.h",
                    "-pipe",
                    "-o",
                    "${fileDirname}${pathSeparator}${fileBasenameNoExtension}.out"
                ]
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "*.cpp",
                    "*.h",
                    "-pipe",
                    "-o",
                    "${fileDirname}${pathSeparator}${fileBasenameNoExtension}.exe"
                ]
            },
            "group": {
                "kind": "build"
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}${pathSeparator}${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}